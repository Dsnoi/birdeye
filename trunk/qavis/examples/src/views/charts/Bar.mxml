<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:charts="org.un.cava.birdeye.qavis.charts.cartesianCharts.*"
	xmlns:series="org.un.cava.birdeye.qavis.charts.series.*"
	xmlns:axis="org.un.cava.birdeye.qavis.charts.axis.*"
	xmlns:legend="org.un.cava.birdeye.qavis.charts.legend.*"
	backgroundColor="#ffffff" 
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center">
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dt:ArrayCollection;;
			private var regions:Array;
			
			private function createDT():void
			{
				regions = ["R1","R2","R3","R4","R5","R6","R7"];
				var ac:ArrayCollection = new ArrayCollection();
				for (var i:Number = 0; i<regions.length; i++)
				{
					var gold:Number = Math.round(Math.random() * 1000),
						silver:Number = Math.round(Math.random() * 1000),
						bronze:Number = Math.round(Math.random() * 1000);
					ac.addItem({
						index: i,
						year: 2000 + i,
						region: regions[i],
						gold: gold,
						silver: silver,
						bronze: bronze,
						total: gold + bronze + silver
					});
				}
				dt = ac;
			}
			
			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = "Total: " + ' (' + currDatatip.total + ')';
				
				for (var i:Number = 0; i<dataFields.length; i++)
					tt += '\n' + dataFields[i] + ": " + currDatatip[dataFields[i]];

				return  tt;
			}
		]]>
	</mx:Script>
	<mx:Button label="Generate" click="createDT()"/>
	<charts:BarChart id="bc2" width="80%" height="80%" dataTipFunction="dtFunc" dataProvider="{dt}" showDataTips="true" type="overlaid">
    	<charts:verticalAxis>
    		<axis:CategoryAxis categoryField="index" placement="right"/>
    	</charts:verticalAxis>
		 <charts:series>
		 	<series:BarSeries xField="gold" fillColor="0xff00" yField="index" displayName="gold">
		 		<series:verticalAxis>
		 			<axis:CategoryAxis categoryField="index" placement="right"/>
		 		</series:verticalAxis>
		 		<series:horizontalAxis>
		 			<axis:LinearAxis placement="top"/>
		 		</series:horizontalAxis>
		 	</series:BarSeries>
		 	<series:BarSeries xField="silver" fillColor="0xff" yField="index" displayName="silver"/>
		 </charts:series>
	</charts:BarChart>
	<charts:BarChart id="bc3" width="80%" height="80%" dataTipFunction="dtFunc" dataProvider="{dt}" showDataTips="true" type="stacked">
    	<charts:verticalAxis>
    		<axis:CategoryAxis categoryField="index" placement="right"/>
    	</charts:verticalAxis>
		 <charts:series>
		 	<series:BarSeries xField="gold" fillColor="0xff00" yField="index" displayName="gold">
		 		<series:verticalAxis>
		 			<axis:CategoryAxis categoryField="index" placement="right"/>
		 		</series:verticalAxis>
		 		<series:horizontalAxis>
		 			<axis:LinearAxis placement="top"/>
		 		</series:horizontalAxis>
		 	</series:BarSeries>
		 	<series:BarSeries xField="silver" fillColor="0xff" yField="index" displayName="silver"/>
		 </charts:series>
	</charts:BarChart>
	<charts:BarChart id="bc4" width="80%" height="80%" dataTipFunction="dtFunc" dataProvider="{dt}" showDataTips="true" type="stacked100">
    	<charts:verticalAxis>
    		<axis:CategoryAxis categoryField="index" placement="right"/>
    	</charts:verticalAxis>
		 <charts:series>
		 	<series:BarSeries xField="gold" fillColor="0xff00" yField="index" displayName="gold">
		 		<series:verticalAxis>
		 			<axis:CategoryAxis categoryField="index" placement="right"/>
		 		</series:verticalAxis>
		 		<series:horizontalAxis>
		 			<axis:LinearAxis placement="top"/>
		 		</series:horizontalAxis>
		 	</series:BarSeries>
		 	<series:BarSeries xField="silver" fillColor="0xff" yField="index" displayName="silver"/>
		 </charts:series>
	</charts:BarChart>
	<legend:ChartLegend dataProvider="{bc4}" direction="horizontal"/>	
</mx:VBox>
