<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:mc="org.un.cava.birdeye.qavis.microcharts.*" paddingTop="0"
	horizontalAlign="center" width="100%" height="100%"
	xmlns:coords="birdeye.vis.coords.*"
	xmlns:elements="birdeye.vis.elements.geometry.*"
	xmlns:scales="birdeye.vis.scales.*">

	<coords:Polar width="70%" height="100%" dataProvider="{data.dataProvider}" showDataTips="true" type="overlaid">
		<coords:scales>
			<scales:CategoryAngle id="c4" categoryField="subject" />
			<scales:Linear id="l4" />
		</coords:scales>
		<coords:elements>
			<elements:AreaElement scale1="{c4}" scale2="{l4}" extendMouseEvents="true" styleName="grad3" dim1="subject" dim2="R1"/>
			<elements:PointElement scale1="{c4}" scale2="{l4}" size=".5" styleName="solid2" dim1="subject" dim2="R2"/>
			<elements:LineElement form="curve" scale1="{c4}" scale2="{l4}" extendMouseEvents="true" styleName="solid1" dim1="subject" dim2="R3"/>
		</coords:elements>
	</coords:Polar>

</mx:HBox>
