<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:polar="birdeye.vis.recipes.polarCharts.*"
	xmlns:cartesian="birdeye.vis.recipes.cartesianCharts.*"
	xmlns:pseries="birdeye.vis.elements.geometry.*"
	xmlns:cseries="birdeye.vis.elements.*"
	xmlns:axis="birdeye.vis.scales.*"
	xmlns:legend="birdeye.vis.guides.legend.*"
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center">
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			
			private function createDT():void
			{
				subject = ["A", "B", "C", "D", "E", "F"];
				var ac:ArrayCollection = new ArrayCollection();
				var ac1:ArrayCollection = new ArrayCollection();
				for (var i:Number = 1; i<subject.length; i++)
				{
					ac.addItem({
						subject: subject[i],
						R1: Math.round(Math.random() * i*10* 1000),
						R2: Math.round(Math.random() * i*10* 1000),
						R3: Math.round(Math.random() * i*10* 1000),
						R4: Math.round(Math.random() * i*10* 1000),
						R5: Math.round(Math.random() * i*10* 1000)
					});
				}
				dt = ac;
			}

			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = "Info: " + currDatatip[dataFields[0]];
				tt += '\n' + dataFields[1] + ": " + currDatatip[dataFields[1]];
				return  tt;
			}
		]]>
	</mx:Script>
 <mx:Fade id="fadeIn" alphaFrom="0" alphaTo="1" duration="1000"/>
<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">
	<mx:Button label="Generate" click="createDT()"/>
	<polar:RadarChart id="rd" type="stacked" showDataTips="true" columnWidthRate=".7" dataTipFunction="dtFunc" dataProvider="{dt}" width="100%" height="100%" layout="radar">
		<polar:radarAxis>
			<axis:RadarAxis angleCategory="subject"/>
		</polar:radarAxis>
		<polar:radiusAxis>
			<axis:LinearAxis />
		</polar:radiusAxis>
		<polar:elements>
			<pseries:PolarColumnElement extendMouseEvents="true" styleName="grad1" angleField="subject" radiusField="R1" displayName="R1"/>
			<pseries:PolarColumnElement extendMouseEvents="true" styleName="grad2" angleField="subject" radiusField="R2" displayName="R2"/>
			<pseries:PolarColumnElement extendMouseEvents="true" styleName="grad3" angleField="subject" radiusField="R3" displayName="R3"/>
			<pseries:PolarColumnElement extendMouseEvents="true" styleName="grad4" angleField="subject" radiusField="R4" displayName="R4"/>
			<pseries:PolarColumnElement extendMouseEvents="true" styleName="grad5" angleField="subject" radiusField="R5" displayName="R5"/>
		</polar:elements>
	</polar:RadarChart>
	<legend:Legend dataProvider="{rd}" direction="horizontal"/>
	
</mx:VBox>
</mx:VBox>
