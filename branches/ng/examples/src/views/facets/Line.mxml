<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:coords="birdeye.vis.coords.*"
	xmlns:line="birdeye.vis.recipes.cartesianCharts.*"
	xmlns:elements="birdeye.vis.elements.geometry.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:legend="birdeye.vis.guides.legend.*"
	xmlns:facets="birdeye.vis.facets.*"
	backgroundColor="#3f3f3f" 
	creationComplete="createDT()" xmlns:axis="birdeye.vis.guides.axis.*">

<mx:Script>
		<![CDATA[
			import birdeye.vis.data.UtilSVG;
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			private var pressure:Array;
			private var type:Array;
			
			private function createDT():void
			{
				subject = ["A", "B", "C", "D", "E", "F"];
				pressure = ["low", "medium", "high"];
				type = ["organic", "chemical", "industrial", "nature",];
				var ac:ArrayCollection = new ArrayCollection();
				var facetData:ArrayCollection;
				var facetItem:Object;

				for (var i:Number = 0; i<subject.length; i++)
				{
					for (var k:Number=0; k<type.length;k++)
					{
						facetData = new ArrayCollection();
						for (var j:Number=0; j<pressure.length;j++)
						{
							facetItem = {
									pressure: pressure[j],
									R1: Math.round(Math.random() * 1000),
									R2: Math.round(Math.random() * 1000),
									R3: Math.round(Math.random() * 1000),
									R4: Math.round(Math.random() * 1000),
									R5: Math.round(Math.random() * 1000)
								}
							facetData.addItem(facetItem);
						}
						ac.addItem({
							subject: subject[i],
							type: type[k],
							newChart: facetData
						});
					}
				}
				dt = ac;
			}
		]]>
	</mx:Script>
	
	
	<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" >
    	
    	<mx:HBox>
    		<mx:Button label="Generate" click="createDT()"/>
			<mx:Button label="SVG export" click="(new FileReference()).save(UtilSVG.createSVG([cc4.svgData], parentApplication.width, parentApplication.height))"/>
		</mx:HBox>
		       	<coords:Cartesian id="cc4" width="90%" height="90%" showDataTips="true" dataProvider="{dt}" 
       		collisionType="stack">
			<coords:scales>
 				<scales:Category id="c3" categoryField="type"  />
 				<scales:Category id="c2" categoryField="subject"  />
			</coords:scales>
			<coords:guides>
				<axis:Axis scale="{c3}" placement="bottom" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="12" />
				<axis:Axis scale="{c2}" placement="left" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="12" />
			</coords:guides>
    		 <coords:elements>
    		 	<elements:PointElement scale1="{c3}" scale2="{c2}" alphaStroke=".3" dim1="type" dim2="subject" styleName="solid1" displayName="R3"
    		 		dataField="newChart">
    		 		<elements:itemRenderer>
    		 			<mx:Component>
							<mx:VBox backgroundAlpha="0">
								<mx:Script>
									<![CDATA[
										import mx.collections.ArrayCollection;
													
										[Bindable]
										public var dt:ArrayCollection;;
							
										private var subject:Array;
										
										override public function set data(value:Object):void
										{
											super.data = value;
											dt = ArrayCollection(data);
										} 
									]]>
								</mx:Script>
							 	<coords:Cartesian showDataTips="true" dataProvider="{dt}" width="100%" height="100%" thicknessRatio="0.5">
								 	<coords:scales>
								 	 	<scales:Category id="c" categoryField="pressure" />
									 	<scales:Linear id="l"  numberOfIntervals="1"/>       		 				
								 	</coords:scales>
								 	<coords:guides>
								 		<axis:Axis scale="{c}" placement="bottom" sizeLabel="9" />
								 		<axis:Axis scale="{l}" placement="left" sizeLabel="9" />	
								 	</coords:guides>
								 	<coords:elements>
								 		<elements:LineElement id="a1" scale1="{c}" scale2="{l}" showAllDataItems="true" dim1="pressure" dim2="R1" styleName="solid1" displayName="R1" />
									 	<elements:LineElement  id="a2" scale1="{c}" scale2="{l}" showAllDataItems="true" dim1="pressure" dim2="R2" styleName="solid2" displayName="R2" />
									 	<elements:LineElement  id="a3" scale1="{c}" scale2="{l}" showAllDataItems="true" dim1="pressure" dim2="R3" styleName="solid3" displayName="R3" />
									 	<elements:LineElement  id="a4" scale1="{c}" scale2="{l}" showAllDataItems="true" dim1="pressure" dim2="R4" styleName="solid4" displayName="R4" />
									 	<elements:LineElement  id="a5" scale1="{c}" scale2="{l}" showAllDataItems="true" dim1="pressure" dim2="R5" styleName="solid5" displayName="R5" />
								 	</coords:elements>
								 </coords:Cartesian>
							</mx:VBox>
							    		 				
    		 			</mx:Component>
    		 		</elements:itemRenderer>
        		 </elements:PointElement>
        	</coords:elements>
        </coords:Cartesian>	
    </mx:VBox>
</mx:VBox>

