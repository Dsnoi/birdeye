<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:recipes="birdeye.vis.recipes.cartesianCharts.*"
	xmlns:elements="birdeye.vis.elements.geometry.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:legend="birdeye.vis.guides.legend.*"
	xmlns:facets="birdeye.vis.facets.*"
	backgroundColor="#3f3f3f" 
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center" xmlns:coords="birdeye.vis.coords.*">

<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			private var pressure:Array;
			private var type:Array;
			
			private function createDT():void
			{
				subject = ["A", "B", "C", "D", "E", "F"];
				pressure = ["low", "medium", "high"];
				type = ["organic", "chemical", "industrial", "nature",];
				var ac:ArrayCollection = new ArrayCollection();

				for (var i:Number = 0; i<subject.length; i++)
				{
					for (var j:Number=0; j<pressure.length;j++)
					{
						for (var k:Number=0; k<type.length;k++)
						{
							ac.addItem({
								subject: subject[i],
								pressure: pressure[j],
								type: type[k],
								R1:Math.round(Math.random() * 1000),
								R2: Math.round(Math.random() * 1000),
								R3: Math.round(Math.random() * 1000),
								R4: Math.round(Math.random() * 1000),
								R5: Math.round(Math.random() * 1000)
							});
						}
					}
				}
				dt = ac;
			}

			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = "Info: " + currDatatip[dataFields[0]];
				tt += '\n' + dataFields[1] + ": " + currDatatip[dataFields[1]];
				return  tt;
			}
		]]>
	</mx:Script>
	
	<mx:Button label="Generate" click="createDT()"/>
	<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" >
       	<coords:Cartesian id="cc4" width="90%" height="90%" dataTipFunction="dtFunc" showDataTips="true" dataProvider="{dt}" 
       		type="stacked100" showGrid="true">
			<coords:scales>
 				<scales:Category id="c3" categoryField="type" placement="bottom" fontLabel="tahoma" sizeLabel="12" showPointer="false"/>
 				<scales:Category id="c2" categoryField="subject" placement="left" fontLabel="tahoma" sizeLabel="12" showPointer="false"/>
			</coords:scales>
    		 <coords:elements>
    		 	<elements:PointElement scale1="{c3}" scale2="{c2}" dim1="type" dim2="subject" styleName="solid1" displayName="R3">
    		 		<elements:itemRenderer>
        		 		<facets:FacetContainer>
        		 			<facets:coord>
        		 				<coords:Cartesian showDataTips="true" columnWidthRate="0.5" showGrid="false"/>
        		 			</facets:coord>
        		 			<facets:scales>
 							 	<scales:Category id="c" categoryField="pressure" placement="bottom" showPointer="false" fontLabel="tahoma" sizeLabel="9"/>
							 	<scales:Linear id="l" placement="left" fontLabel="tahoma" sizeLabel="9" showPointer="false" numberOfIntervals="1" height="100"/>       		 				
        		 			</facets:scales>
        		 			<facets:elements>
        		 				<elements:ColumnElement id="a1" scale1="{c}" scale2="{l}" showAllDataItems="true" dim1="pressure" dim2="R1" styleName="solid1" displayName="R1" />
        		 			</facets:elements>
        		 		</facets:FacetContainer>
        		 	</elements:itemRenderer>
        		 </elements:PointElement>
        	</coords:elements>
        </coords:Cartesian>
	</mx:VBox>
</mx:VBox>
