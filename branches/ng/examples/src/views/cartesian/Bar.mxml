<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:coords="birdeye.vis.coords.*"
	xmlns:elements="birdeye.vis.elements.geometry.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:guides="birdeye.vis.guides.legend.*"
	backgroundColor="#3f3f3f" 
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center">
	<mx:Script>
		<![CDATA[

			import mx.collections.ArrayCollection;
			import mx.core.IToolTip;
			import mx.controls.Alert;
			import birdeye.vis.data.DataItemLayout;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			
			private function createDT():void
			{
				subject = ["A", "B", "C", "D", "E", "F"];
				var ac:ArrayCollection = new ArrayCollection();
				var R1:Number, R2:Number, R3:Number, R4:Number;
				
				for (var i:Number = 0; i<subject.length; i++)
				{
					ac.addItem({
						subject: subject[i],
						R1: R1=Math.round(Math.random() * 1000),
						R2: R2=Math.round(Math.random() * 1000),
						R3: R3=Math.round(Math.random() * 1000),
						R4: R4=Math.round(Math.random() * 1000)
					});
				}
				dt = ac;
			}

			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = dataFields["dim1"] + ": " + currDatatip[dataFields["dim1"]];
				tt += '\n' + dataFields["dim2"] + ": " + currDatatip[dataFields["dim2"]];
				if (dataFields["sizeField"] != null)
					tt += '\n' + dataFields["sizeField"] + ": " + currDatatip[dataFields["sizeField"]];
				return  tt;
			}
		]]>
	</mx:Script>
	<mx:Button label="Generate" click="createDT()"/>
	<mx:HBox height="100%" width="100%" verticalAlign="middle" horizontalAlign="center" >
	<mx:VBox height="100%" width="100%" verticalAlign="middle" horizontalAlign="center">
	<coords:Cartesian id="bc2" width="90%" height="90%" dataProvider="{dt}" dataTipFunction="dtFunc" showDataTips="true" type="stacked">
		<coords:scales>
	    		<scales:Category id="c" categoryField="subject" placement="left" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12"/>
	    		<scales:Linear id="l" placement="top" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12"/>
		</coords:scales>
    	 <coords:elements>
		 	<elements:BarElement scale1="{l}" scale2="{c}" extendMouseEvents="true" dim1="R1" styleName="grad1" dim2="subject" displayName="R1" />
		 	<elements:BarElement scale1="{l}" scale2="{c}" extendMouseEvents="true" dim1="['R1','R4','R3']" collisionType="stacked100" styleName="grad4" dim2="subject" displayName="Mix" />
		 	<elements:BarElement scale1="{l}" scale2="{c}" extendMouseEvents="true" dim1="['R4','R2','R3']" collisionType="stacked" dim2="subject" displayName="Mix" />
		 </coords:elements>
	</coords:Cartesian>
	<guides:Legend dataProvider="{bc2}" direction="horizontal" />	
		
	</mx:VBox>
	
	<mx:VBox height="100%" width="100%" verticalAlign="middle" horizontalAlign="center">
	<coords:Cartesian id="bc3" width="90%" height="90%" dataProvider="{dt}" dataTipFunction="dtFunc" showDataTips="true" type="stacked100">
		<coords:scales>
	    		<scales:Category id="c1" categoryField="subject" placement="right" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12"/>
	    		<scales:Linear id="l1" placement="top" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12"/>
		</coords:scales>
    	 <coords:elements>
		 	<elements:BarElement scale1="{l1}" scale2="{c1}" extendMouseEvents="true" dim1="R1" styleName="grad1" dim2="subject" displayName="R1" />
		 	<elements:BarElement scale1="{l1}" scale2="{c1}" extendMouseEvents="true" dim1="R2" styleName="grad2" dim2="subject" displayName="R2" />
		 	<elements:BarElement scale1="{l1}" scale2="{c1}" extendMouseEvents="true" dim1="R3" styleName="grad3" dim2="subject" displayName="R3" />
		 	<elements:BarElement scale1="{l1}" scale2="{c1}" extendMouseEvents="true" dim1="R4" styleName="grad4" dim2="subject" displayName="R4" />
		 	<elements:BarElement scale1="{l1}" scale2="{c1}" extendMouseEvents="true" collisionType="stacked" dim1="['R1','R4','R2']" styleName="grad5" dim2="subject" displayName="R4" />
		 </coords:elements>
	</coords:Cartesian>
	<guides:Legend dataProvider="{bc3}" direction="horizontal" />	
	</mx:VBox>
	</mx:HBox>
	
</mx:VBox>
