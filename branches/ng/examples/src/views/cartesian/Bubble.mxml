<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:recipes="birdeye.vis.recipes.cartesianCharts.*"
	xmlns:elements="birdeye.vis.elements.geometry.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:guides="birdeye.vis.guides.legend.*"
	backgroundColor="#3f3f3f" 
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center" xmlns:coords="birdeye.vis.coords.*">

<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			
			private function createDT():void
			{
				subject = ["A", "B", "C", "D", "E", "F"];
				var ac:ArrayCollection = new ArrayCollection();
				var r1:Number, r2:Number, r3:Number, r4:Number;
				for (var i:Number = 0; i<subject.length; i++)
				{
					ac.addItem({
						subject: subject[i],
						R1: r1=Math.round(Math.random() * 1000),
						R2: r2=Math.round(Math.random() * 1000),
						R3: r3=Math.round(Math.random() * 1000),
						R4: r4=Math.round(Math.random() * 1000),
						total: r1+r2+r3+r4 
					});
				}
				dt = ac;
			}

			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = "Info: " + currDatatip[dataFields[0]];
				tt += '\n' + dataFields[1] + ": " + currDatatip[dataFields[1]];
				return  tt;
			}
		]]>
	</mx:Script>
	
	<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" >
	<mx:Button label="Generate" click="createDT()"/>
	<coords:Cartesian id="bb" width="90%" height="90%" dataProvider="{dt}" showDataTips="true" isMasked="false">
		<coords:scales>
	 		<scales:Category id="c" categoryField="subject" placement="bottom" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12"/>
		 	<scales:Linear id="l" placement="left" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12" />
			<scales:Linear id="size" scaleValues="[5,30]" showAxis="false"/>
		</coords:scales>
		 <coords:elements>
		 	<elements:PointElement scale1="{c}" scale2="{l}" extendMouseEvents="true" dim1="subject" sizeScale="{size}" sizeField="total" styleName="grad1" dim2="R1" displayName="R1"/>
		 	<elements:PointElement scale1="{c}" scale2="{l}" extendMouseEvents="true" dim1="subject" sizeScale="{size}" sizeField="total" styleName="grad3" dim2="R2" displayName="R2"/>
		 	<elements:PointElement scale1="{c}" scale2="{l}" extendMouseEvents="true" dim1="subject" sizeScale="{size}" sizeField="total" styleName="grad5" dim2="R3" displayName="R3"/>
		 	<elements:PointElement scale1="{c}" scale2="{l}" extendMouseEvents="true" dim1="subject" sizeScale="{size}" sizeField="total" styleName="grad4" dim2="R4" displayName="R4"/>
		 </coords:elements>
	</coords:Cartesian>
	<guides:Legend dataProvider="{bb}" direction="horizontal"/>
	</mx:VBox>
</mx:VBox>
