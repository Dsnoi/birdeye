<?xml version="1.0" encoding="utf-8"?>
<mx:Application 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:cartesian="views.cartesian.*" 
	xmlns:polar="views.polar.*"
	xmlns:geo="views.geo.*"
	xmlns:graphs="views.graphs.*"
	xmlns:recipes="views.recipes.*"
	xmlns:about="views.about.*"
	backgroundGradientColors="[#222222, #222222]"
	>

	<mx:Style source="styles/darkroom.css" />
	
	<mx:Box width="100%" height="100%" 
	horizontalAlign="center" verticalAlign="top" 
	horizontalScrollPolicy="off" verticalScrollPolicy="off" >
	<mx:Spacer height="5" />	
	
	<mx:VBox width="1000" height="744"
		horizontalGap="5" 
		paddingTop="5" paddingLeft="5" paddingRight="5" paddingBottom="5" 
		horizontalScrollPolicy="off" verticalScrollPolicy="off" >
	
		<mx:HBox width="100%" height="20" 
		horizontalAlign="left" verticalAlign="middle" 
		horizontalScrollPolicy="off" verticalScrollPolicy="off" >
		<mx:Label text="BIRDEYE the Declarative Visual Analytics Library" fontSize="12" />
		</mx:HBox>
	
		<mx:TabNavigator width="100%" height="100%" paddingLeft="5" paddingRight="5" paddingBottom="5" creationPolicy="auto">
			<cartesian:Cartesian label="Cartesian" width="100%" height="100%"/>
			<polar:Polar label="Polar" width="100%" height="100%"/>
			<geo:Maps label="Maps" width="100%" height="100%"/>
			<graphs:Graphs label="Graphs" width="100%" height="100%"/>
			<recipes:Recipes label="Recipes" width="100%" height="100%"/>
			<about:About label="About..." width="100%" height="100%"/>
		</mx:TabNavigator>
	
	</mx:VBox>
	</mx:Box>

</mx:Application>
