<?xml version="1.0" encoding="utf-8"?>
<mx:Box xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:polar="birdeye.vis.coords.*"
	xmlns:cartesian="birdeye.vis.recipes.cartesianCharts.*"
	xmlns:pseries="birdeye.vis.elements.geometry.*"
	xmlns:cseries="birdeye.vis.elements.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:legend="birdeye.vis.guides.legend.*"
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center">
	
<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dt:ArrayCollection;;

			[Bindable]
			public var dt1:ArrayCollection;;

			private var subject:Array;
			
			private var regions:Array = ["R1", "R2", "R3", "R4"];
			private function createDT():void
			{
				var ac:ArrayCollection = new ArrayCollection();
				for (var i:Number = 0; i<regions.length; i++)
				{
					ac.addItem({
						region: regions[i],
						GDP: Math.round(Math.random() * 1000),
						Area: Math.round(Math.random() * 1000),
						Density: Math.round(Math.random() * 1000),
						Population: Math.round(Math.random() * 1000)
					});
				}
				dt = ac;

				var ac1:ArrayCollection = new ArrayCollection();
				for (i = 1; i<40; i++)
					ac1.addItem({
						R1: Math.round(Math.random() * i*10* 1000)
					});

				dt = ac;
				dt1 = ac1;
			}

			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = currDatatip[dataFields[0]];
				return  tt;
			}
		]]>
	</mx:Script>

<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">
    	<mx:Button label="Generate" click="createDT()"/>
	<polar:Polar dataProvider="{dt}" width="100%" height="100%" columnWidthRate=".3" type="stacked" dataTipFunction="dtFunc">
		<polar:radiusScale>
			<scales:Numeric scaleType="constant" showAxis="false"/>
		</polar:radiusScale>
		<polar:colorAxis>
			<scales:Color range="{[0x9900ff,0x990016]}"/>
		</polar:colorAxis>
		<polar:scales>
			<scales:PercentAngle id="a" size="270"/>
			<scales:PercentAngle id="b" size="270"/>
			<scales:PercentAngle id="c" size="270"/>
		</polar:scales>
		<polar:elements>
			<pseries:PolarPieElements angleScale="{a}" radiusLabelOffset="5" colorField="Density" extendMouseEvents="true" angleField="GDP" displayName="A">
			</pseries:PolarPieElements>
			<pseries:PolarPieElements angleScale="{b}" radiusLabelOffset="10" colorField="Density" labelField="region" extendMouseEvents="true" angleField="Density" displayName="B">
			</pseries:PolarPieElements>
			<pseries:PolarPieElements angleScale="{c}" labelField="region" radiusLabelOffset="10" extendMouseEvents="true" colorField="Area" radiusField=" " angleField="Area" displayName="C">
			</pseries:PolarPieElements>
		</polar:elements>
	</polar:Polar>
	
</mx:VBox>

</mx:Box>
