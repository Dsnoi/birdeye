<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:recipe="birdeye.vis.recipes.cartesianCharts.*"
	xmlns:coords="birdeye.vis.coords.*"
	xmlns:elements="birdeye.vis.elements.geometry.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:guides="birdeye.vis.guides.legend.*"
	backgroundColor="#3f3f3f" 
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center" xmlns:axis="birdeye.vis.guides.axis.*" xmlns:grid="birdeye.vis.guides.grid.*">

<mx:Script>
		<![CDATA[
			import birdeye.vis.data.UtilSVG;
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			
			private function createDT():void
			{
				subject = ["catA", "catB", "catC", "catD", "catE", "catF"];
				var ac:ArrayCollection = new ArrayCollection();
				var R1:Number, R2:Number, R3:Number, R4:Number, R5:Number;
				
				for (var i:Number = 0; i<subject.length; i++)
				{
					ac.addItem({
						subject: subject[i],
						R1: R1=Math.round(Math.random()) * 10 ,
						R2: R2=Math.round(Math.random() * 10),
						R3: R3=Math.round(Math.random() * 10),
						R4: R4=Math.round(Math.random() * 10),
						R5: R5=Math.round(Math.random() * 10)
					});
				}
				dt = ac;
			}

			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = dataFields["dim1"] + ": " + currDatatip[dataFields["dim1"]];
				tt += '\n' + dataFields["dim2"] + ": " + currDatatip[dataFields["dim2"]];
				return  tt;
			}

			private function changeForm(a:Array):void
			{
				for (var i:Number = 0; i<a.length; i++)
				{
					if (curve.selected)
					{
						a[i].form = "curve";
						AreaElement(a[i]).tension = tens.value;
					}
					else
					{
						a[i].form = "line";
					}
				}
			}
		]]>
	</mx:Script>
	
	
	<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" >
    	
    	<mx:HBox >
    		<mx:Button label="Generate" click="createDT()"/>
			<mx:Button label="SVG export" click="(new FileReference()).save(UtilSVG.createSVG([ac3.svgData, legend.svgData], parentApplication.width, parentApplication.height))"/>
    		<mx:CheckBox id="curve" label="Curve" selected="false" click="changeForm([a1,a2])"/>
    		<mx:HSlider id="tens" maximum="20" minimum="0" value="1" change="changeForm([a1,a2])"/>
		</mx:HBox>
    	
    	<coords:Cartesian id="ac3" width="90%" height="90%" collisionType="overlaid" dataProvider="{dt}" dataTipFunction="dtFunc" showDataTips="true">
 		<coords:scales>
 			<scales:Category categoryField="subject" id="c" />
 			<scales:Linear id="l1"/>
 		</coords:scales>
 		<coords:guides>
 			<axis:Axis scale="{c}" placement="bottom" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12"  />
 			<axis:Axis scale="{l1}" placement="left" colorPointer="0xFF0000" fontLabel="verdana" colorLabel="0xffffff" weightPointer="5" sizeLabel="10" sizePointer="15" />
 <!--			<grid:Grid scale1="{l1}" scale2="{c}" />-->
 		</coords:guides>
		 <coords:elements>
		 	<elements:AreaElement id="a1" showGraphicRenderer="true" graphicRenderer="birdeye.vis.guides.renderers.CircleRenderer" scale2="{l1}" scale1="{c}" dim1="subject" dim2="R1" styleName="grad1" strokeAlpha=".5" displayName="R1"/>
    		<elements:AreaElement id="a2" showGraphicRenderer="true" graphicRenderer="birdeye.vis.guides.renderers.CircleRenderer" scale2="{l1}" scale1="{c}" dim1="subject" dim2="R2" styleName="grad2" strokeAlpha=".5" displayName="R2"/>
	   		<elements:AreaElement id="a3" showGraphicRenderer="true" graphicRenderer="birdeye.vis.guides.renderers.CircleRenderer" scale2="{l1}" scale1="{c}" dim1="subject" dim2="R3" styleName="grad3" strokeAlpha=".5" displayName="R3"/>
    		<elements:AreaElement id="a4" showGraphicRenderer="true" graphicRenderer="birdeye.vis.guides.renderers.CircleRenderer" scale2="{l1}" scale1="{c}" dim1="subject" dim2="R4" styleName="grad4" strokeAlpha=".5" displayName="R4"/>
    		<elements:AreaElement id="a5" showGraphicRenderer="true" graphicRenderer="birdeye.vis.guides.renderers.CircleRenderer" scale2="{l1}" scale1="{c}" dim1="subject" dim2="R5" styleName="grad4" strokeAlpha=".5" displayName="R5"/>
		 </coords:elements>
	</coords:Cartesian>

    <guides:Legend id="legend" dataProvider="{ac3}" direction="horizontal"/>

	</mx:VBox>
</mx:VBox>
