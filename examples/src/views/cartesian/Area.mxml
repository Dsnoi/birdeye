<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:recipe="birdeye.vis.recipes.cartesianCharts.*"
	xmlns:coords="birdeye.vis.coords.*"
	xmlns:elements="birdeye.vis.elements.geometry.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:guides="birdeye.vis.guides.legend.*"
	backgroundColor="#3f3f3f" 
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center">

<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			
			private function createDT():void
			{
				subject = ["A", "B", "C", "D", "E", "F"];
				var ac:ArrayCollection = new ArrayCollection();
				var ac1:ArrayCollection = new ArrayCollection();
				for (var i:Number = 0; i<subject.length; i++)
				{
					ac.addItem({
						subject: subject[i],
						R1: Math.round(Math.random() * 1000),
						R2: Math.round(Math.random() * 1000),
						R3: Math.round(Math.random() * 1000),
						R4: Math.round(Math.random() * 1000)
					});
				}
				dt = ac;
			}

			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = "Info: " + currDatatip[dataFields[0]];
				tt += '\n' + dataFields[1] + ": " + currDatatip[dataFields[1]];
				return  tt;
			}
		]]>
	</mx:Script>
	
	
	<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" >
    	<mx:Button label="Generate" click="createDT()"/>
    	<coords:Cartesian id="ac3" width="90%" height="90%" dataProvider="{dt}" dataTipFunction="dtFunc" showDataTips="true">
 		<coords:scale1>
 			<scales:Category categoryField="subject" placement="bottom" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12" />
 		</coords:scale1>
 		<coords:scale2>
 			<scales:Linear placement="left" id="linear" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12" />
 		</coords:scale2>
 		<coords:scales>
 			<scales:Category categoryField="subject" id="c2" placement="bottom" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12" />
 			<scales:Linear placement="right" id="l2" colorPointer="0x000000" fontLabel="verdana" weightPointer="5" sizeLabel="10" sizePointer="15"/>
 		</coords:scales>
		 <coords:elements>
		 	<elements:LineElement scale2="{l2}" scale1="{c2}" showItemRenderer="true" itemRenderer="birdeye.vis.guides.renderers.DiamondRenderer" dim1="subject" dim2="R1"  styleName="solid1" />
		 	<elements:LineElement scale2="{l2}" scale1="{c2}" showItemRenderer="true" itemRenderer="birdeye.vis.guides.renderers.DiamondRenderer" dim1="subject" dim2="R2"  styleName="solid2" />
		 	<elements:LineElement scale2="{l2}" scale1="{c2}" showItemRenderer="true" itemRenderer="birdeye.vis.guides.renderers.DiamondRenderer" dim1="subject" dim2="R3"  styleName="solid3" />
		 	<elements:LineElement scale2="{l2}" scale1="{c2}" showItemRenderer="true" itemRenderer="birdeye.vis.guides.renderers.DiamondRenderer" dim1="subject" dim2="R4"  styleName="solid4" />

		 	<elements:AreaElement scale2="{l2}" scale1="{c2}" dim1="subject" dim2="R1" styleName="grad1" strokeAlpha="0" displayName="R1"/>
    		<elements:AreaElement scale2="{l2}" scale1="{c2}" dim1="subject" dim2="R2" styleName="grad2" strokeAlpha="0" displayName="R2"/>
    		<elements:AreaElement scale2="{l2}" scale1="{c2}" dim1="subject" dim2="R3" styleName="grad3" strokeAlpha="0" displayName="R3"/>
    		<elements:AreaElement scale2="{l2}" scale1="{c2}" dim1="subject" dim2="R4" styleName="grad4" strokeAlpha="0" displayName="R4"/>
		 </coords:elements>
	</coords:Cartesian>
    <guides:Legend dataProvider="{ac3}" direction="horizontal"/>
	</mx:VBox>
</mx:VBox>
