<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:recipes="birdeye.vis.recipes.cartesianCharts.*"
	xmlns:elements="birdeye.vis.elements.geometry.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:legend="birdeye.vis.guides.legend.*"
	xmlns:grid="birdeye.vis.guides.grid.*"
	backgroundColor="#3f3f3f" 
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center" xmlns:coords="birdeye.vis.coords.*" xmlns:axis="birdeye.vis.guides.axis.*">

<mx:Script>
		<![CDATA[
			import birdeye.vis.data.UtilSVG;
			import birdeye.vis.data.DataItemLayout;
			import mx.collections.ArrayCollection;
			import birdeye.vis.elements.util.EffectsUtil;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			
			private function createDT():void
			{
				subject = ["A", "B", "C", "D", "E", "F"];
				var ac:ArrayCollection = new ArrayCollection();
				var r1:Number, r2:Number, r3:Number, r4:Number, r5:Number;
				for (var i:Number = 0; i<subject.length; i++)
				{
					ac.addItem({
						subject: subject[i],
						R1: r1 = Math.round(Math.random() * 1000),
						R2: r2 = Math.round(Math.random() * 1000),
						R3: r3 = Math.round(Math.random() * 1000),
						R4: r4 = Math.round(Math.random() * 1000),
						R5: r5 = Math.round(Math.random() * 1000),
						R6: Math.round(Math.random() * 1000),
						R7: Math.round(Math.random() * 1000),
						global: 0,
						R8: Math.round(Math.random() * 1000)
					});
				}
				dt = ac;
			}

			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = dataFields["dim1"] + ": " + currDatatip[dataFields["dim1"]];
				tt += '\n' + "Y: " + dataFields["dim2"] + ": " + currDatatip[dataFields["dim2"]];
				if (dataFields["sizeField"] != null)
					tt += '\n' + "Size: " + dataFields["sizeField"] + ": " + currDatatip[dataFields["sizeField"]];
				return  tt;
			}

			private function mouseOver(target:DataItemLayout):void
			{
				var gradientGlow:GradientGlowFilter = new GradientGlowFilter();
				gradientGlow.distance = 0;
				gradientGlow.angle = 45;
				gradientGlow.colors = [0x000000, DataItemLayout(target).fill];
				gradientGlow.alphas = [0, 1];
				gradientGlow.ratios = [0, 255];
				gradientGlow.blurX = 8;
				gradientGlow.blurY = 8;
				gradientGlow.strength = 2;
				gradientGlow.quality = BitmapFilterQuality.HIGH;
				gradientGlow.type = BitmapFilterType.OUTER;
				DataItemLayout(target).filters=[gradientGlow];
			}
			private function mouseOut(target:DataItemLayout):void
			{
				DataItemLayout(target).filters=[];
			}
		]]>
	</mx:Script>
	
	<mx:Button label="Generate" click="createDT()"/>
	<mx:Button label="SVG export" click="(new FileReference()).save(UtilSVG.createSVG([cc4.svgData, cc5.svgData], parentApplication.width, parentApplication.height))"/>
	<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" >
	       	<coords:Cartesian id="cc4" width="90%" height="90%" thicknessRatio="1" showDataTips="false" dataProvider="{dt}" 
	       		collisionType="stack">
				<coords:scales>
 					<scales:Category id="c" categoryField="subject"/>
	 				<scales:Linear id="l" />
					<scales:Linear id="size" scaleValues="[.1,1]" />
				</coords:scales>
				<coords:guides>
					<axis:Axis scale="{c}"  placement="bottom" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12" />
					<axis:Axis scale="{l}" placement="left" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12" />
					<grid:Grid scale1="{l}" scale2="{c}" />
				</coords:guides>
        		 <coords:elements>
        		 	<elements:ColumnElement extendMouseEvents="true" mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" scale1="{c}" scale2="{l}" sizeScale="{size}" sizeField="R2" dim1="subject" dim2="R1" styleName="grad1" displayName="R1"/>
        		 	<elements:ColumnElement extendMouseEvents="true" mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" scale1="{c}" scale2="{l}" sizeScale="{size}" sizeField="R1" dim1="subject" dim2="R2" styleName="grad3" displayName="R2"/>
        		 	<elements:ColumnElement extendMouseEvents="true" mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects"  scale1="{c}" scale2="{l}" sizeScale="{size}" sizeField="R4" dim1="subject" dim2="R3" styleName="grad5" displayName="R3"/>
        		 	<elements:ColumnElement extendMouseEvents="true" mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects"  scale1="{c}" scale2="{l}" sizeScale="{size}" sizeField="R5" dim1="subject" dim2="R4" styleName="grad2" displayName="R4"/>
        		 	<elements:ColumnElement extendMouseEvents="true" mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" scale1="{c}" scale2="{l}" sizeScale="{size}" sizeField="R3" dim1="subject" dim2="R5" styleName="grad4" displayName="R5"/>
        		 	<elements:LineElement mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" scale1="{c}" scale2="{l}" dim1="subject" dim2="global" styleName="solid1" displayName="Global Trend"/>
        		 </coords:elements>
        	</coords:Cartesian>
			<legend:Legend dataProvider="{cc4}" direction="horizontal"/>
	       	<coords:Cartesian id="cc5" width="90%" height="90%" thicknessRatio="1" dataTipFunction="dtFunc" showDataTips="true" dataProvider="{dt}" 
	       		collisionType="cluster">
				<coords:scales>
 					<scales:Category id="c1" categoryField="subject" />
	 				<scales:Linear id="l1" />
				</coords:scales>
				<coords:guides>
					<axis:Axis scale="{c1}" placement="bottom" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12" />
					<axis:Axis scale="{l1}" placement="left" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12" />
				</coords:guides>
        		 <coords:elements>
        		 	<elements:ColumnElement extendMouseEvents="true" mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" scale1="{c1}" scale2="{l1}" dim1="subject" dim2="R1" styleName="grad1" displayName="R1"/>
        		 	<elements:ColumnElement mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" scale1="{c1}" scale2="{l1}" dim1="subject" dim2="R2" styleName="grad3" displayName="R2"/>
        		 	<elements:ColumnElement mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" scale1="{c1}" scale2="{l1}" dim1="subject" dim2="R3" styleName="grad5" displayName="R3"/>
        		 	<elements:ColumnElement mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" scale1="{c1}" scale2="{l1}" dim1="subject" dim2="R4" styleName="grad2" displayName="R4"/>
        		 	<elements:ColumnElement mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" scale1="{c1}" scale2="{l1}" dim1="subject" dim2="R5" styleName="grad4" displayName="R5"/>
        		 	<!--<elements:ColumnElement mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" scale1="{c1}" scale2="{l1}" dim1="subject" collisionType="stack" dim2="{['R1','R2','R3','R4','R5']}" styleName="solid1" displayName="R2"/>
        		 	<elements:ColumnElement mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" scale1="{c1}" scale2="{l1}" dim1="subject" collisionType="stack" dim2="{['R6','R7','R8']}" 
        		 		colorsStart="[0xFF0000, 0x0000FF, 0x00FF00]" colorsStop="[0xFF0000, 0x0000FF, 0x00FF00]" styleName="grad3" displayName="R2"/>-->
        		 </coords:elements>
        	</coords:Cartesian>
	</mx:VBox>


</mx:VBox>
