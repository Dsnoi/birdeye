<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:recipes="birdeye.vis.recipes.cartesianCharts.*"
	xmlns:elements="birdeye.vis.elements.geometry.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:legend="birdeye.vis.guides.legend.*"
	backgroundColor="#ffffff" 
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center">

<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			
			private function createDT():void
			{
				subject = ["A", "B", "C", "D", "E", "F"];
				var ac:ArrayCollection = new ArrayCollection();
				var ac1:ArrayCollection = new ArrayCollection();
				for (var i:Number = 0; i<subject.length; i++)
				{
					ac.addItem({
						subject: subject[i],
						R1: Math.round(Math.random() * 1000),
						R2: Math.round(Math.random() * 1000),
						R3: Math.round(Math.random() * 1000),
						R4: Math.round(Math.random() * 1000),
						R5: Math.round(Math.random() * 1000)
					});
				}
				dt = ac;
			}

			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = "Info: " + currDatatip[dataFields[0]];
				tt += '\n' + dataFields[1] + ": " + currDatatip[dataFields[1]];
				return  tt;
			}
		]]>
	</mx:Script>
	
	<mx:Button label="Generate" click="createDT()"/>
	<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" >
	       	<recipes:ColumnChart id="cc4" width="90%" height="90%" dataTipFunction="dtFunc" showDataTips="true" dataProvider="{dt}" 
	       		type="stacked100">
		 		<recipes:scale1>
 					<scales:Category categoryField="subject" placement="bottom" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12"/>
 				</recipes:scale1>
 				<recipes:scale2>
	 				<scales:Linear placement="left" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12"/>
	 			</recipes:scale2>
        		 <recipes:elements>
        		 	<elements:ColumnElement extendMouseEvents="true" dim1="subject" dim2="R1" baseAtZero="true" styleName="grad1" displayName="R1">
        		 	</elements:ColumnElement>
        		 	<elements:ColumnElement extendMouseEvents="true" dim1="subject" dim2="R2" baseAtZero="true" styleName="grad3" displayName="R2">
        		 	</elements:ColumnElement>
        		 	<elements:ColumnElement extendMouseEvents="true" dim1="subject" dim2="R3" baseAtZero="true" styleName="grad5" displayName="R3">
        		 	</elements:ColumnElement>
        		 	<elements:ColumnElement extendMouseEvents="true" dim1="subject" dim2="R4" baseAtZero="true" styleName="grad2" displayName="R4">
        		 	</elements:ColumnElement>
        		 	<elements:ColumnElement extendMouseEvents="true" dim1="subject" dim2="R5" baseAtZero="true" styleName="grad4" displayName="R5">
        		 	</elements:ColumnElement>
        		 </recipes:elements>
        	</recipes:ColumnChart>
			<legend:Legend dataProvider="{cc4}" direction="horizontal"/>
	</mx:VBox>


</mx:VBox>
